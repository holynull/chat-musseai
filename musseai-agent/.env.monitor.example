# Alert Monitor Configuration
ALERT_CHECK_INTERVAL=60
ALERT_MAX_CONCURRENT=10
ALERT_NOTIFICATION_TIMEOUT=30

# Email Notifications
ALERT_EMAIL_ENABLED=true
ALERT_SMTP_SERVER=smtp.gmail.com
ALERT_SMTP_PORT=587
ALERT_SMTP_USERNAME=your-email@gmail.com
ALERT_SMTP_PASSWORD=your-app-password
ALERT_FROM_EMAIL=your-email@gmail.com

# SMS Notifications (Twilio)
ALERT_SMS_ENABLED=false
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_FROM_NUMBER=+1234567890

# Push Notifications (Firebase)
ALERT_PUSH_ENABLED=false
FIREBASE_SERVER_KEY=your-firebase-key

# Webhook Notifications
ALERT_WEBHOOK_ENABLED=true
ALERT_WEBHOOK_TIMEOUT=10
ALERT_WEBHOOK_RETRIES=2
